{
  "name": "mail-to-notion",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/shared",
    "packages/backend",
    "packages/frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w @mail-to-notion/backend\" \"npm run dev -w @mail-to-notion/frontend\"",
    "build": "npm run build -w @mail-to-notion/shared && npm run build -w @mail-to-notion/backend && npm run build -w @mail-to-notion/frontend",
    "build:shared": "npm run build -w @mail-to-notion/shared",
    "dev:backend": "npm run dev -w @mail-to-notion/backend",
    "dev:frontend": "npm run dev -w @mail-to-notion/frontend",
    "start": "node packages/backend/dist/index.js",
    "start:pm2": "pm2 start ecosystem.config.cjs",
    "stop:pm2": "pm2 stop mail-to-notion",
    "setup:service": "powershell -ExecutionPolicy Bypass -File scripts/setup-service.ps1"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "typescript": "^5.7.0"
  }
}
